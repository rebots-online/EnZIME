{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EnZIM",
  "version": "0.1.0",
  "identifier": "com.enzim.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "EnZIM - Offline Knowledge Explorer",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "category": "Education",
    "shortDescription": "Offline ZIM Reader & Knowledge Explorer",
    "longDescription": "EnZIM is an offline knowledge companion for exploring encyclopedic archives like Wikipedia without internet. Features semantic mesh navigation, AI assistance, and beautiful themed interfaces.",
    "publisher": "Robin L. M. Cheung, MBA",
    "copyright": "Copyright Â© 2025 Robin L. M. Cheung, MBA. All rights reserved.",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "scope": ["$APPDATA/**", "$DOWNLOAD/**", "$HOME/**", "$DOCUMENT/**"]
    },
    "dialog": {
      "open": true,
      "save": true
    }
  }
}
