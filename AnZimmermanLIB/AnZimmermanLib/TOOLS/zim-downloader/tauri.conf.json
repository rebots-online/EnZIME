{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZIM Downloader",
  "version": "0.1.0",
  "identifier": "com.zimlib.downloader",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "",
    "frontendDist": ""
  },
  "app": {
    "windows": [],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "category": "Utility",
    "shortDescription": "Download ZIM files from public repositories",
    "longDescription": "A cross-platform TUI application for browsing and downloading ZIM files from Kiwix and other public repositories. Supports multiple download sources, resume capability, and configurable storage locations.",
    "publisher": "ZIM Library",
    "copyright": "Copyright Â© 2024 ZIM Library",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "skip"
      },
      "wix": null,
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "scope": ["$APPDATA/*", "$DOWNLOAD/*", "$HOME/*"]
    },
    "http": {
      "scope": [
        "https://download.kiwix.org/*",
        "https://library.kiwix.org/*",
        "https://dumps.wikimedia.org/*",
        "https://*.archive.org/*"
      ]
    }
  }
}
